<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.watermelon.relativelayout.MainActivity">

    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="请输入您要拨打的电话号码"
                  android:id="@+id/tv_num01"
        />

        <EditText android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="请输入您要拨打的电话号码"
                  android:layout_below="@+id/tv_num01"
                  android:id="@+id/et_num01"
        />

        <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="拨打01"
                android:layout_below="@+id/et_num01"
                android:id="@+id/btn_num01"
        />

        <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="拨打02"
                android:layout_below="@+id/et_num01"
                android:layout_toRightOf="@+id/btn_num01"
        />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
